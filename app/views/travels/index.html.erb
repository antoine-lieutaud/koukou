<h1>Travels</h1>
<br>
<div class="container-fluid">
  <div class="row">
    <% @travels.each do |travel| %>
      <div class="col-3 py-2">
        <% if travel.photo.attached? %>
          <div class="view-card" style="background-image: url(<%= cl_image_path travel.photo.key %>)">
        <% else %>
          <div class="view-card" style="background-image: url('https://res.cloudinary.com/db1oldp7q/image/upload/v1621524617/default_tbamrn.jpg')">
        <% end %>
          <%= link_to "#{travel.departure} - #{travel.arrival}
          #{travel.status}", travel_path(travel), class: "travel-info"%>
          <br>
            <i class="fas fa-user-friends ; font-size: 26px "></i>
            <div class="ppl">
              <%= link_to "#{travel.capacity}" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


