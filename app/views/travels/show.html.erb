<div class="parallax-window">
    <h5><%= "#{@travel.departure.split(",").first}" %> - <%= "#{@travel.arrival.split(",").first}" %></h5>

  <div class="parallax-slider d-flex align-items-center justify-content-center">
      <% if @travel.photo.attached? %>
      <%= cl_image_tag @travel.photo.key %>
      <% end %>
  </div>

</div>


<div class="pilot-description">
  <div class="pilot-info">
    <%= image_tag asset_path("charles.jpg"), class: "pilot-pp" %>
    <h2>Charles Choffel</h2>
  </div>
  <p><i class="descrip"></i><%= "#{@travel.description}" %></p>
</div>
<div style="display: flex; justify-content: center;">
  <div class="icons-show">
