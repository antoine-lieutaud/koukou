      <p><i class="far fa-calendar-alt"></i><%= "#{@travel.time_flight}" %></p>
    </div>
    <div class="dep">
      <p><i class="fas fa-plane-departure"></i><%= "#{@travel.departure}" %></p>
      </div>
    <div class="arrival">
      <p><i class="fas fa-plane-arrival"></i><%= "#{@travel.arrival}" %></p>
    </div>
    <div class="price">
      <p><i class="fas fa-tag"></i><%= "#{@travel.price}â‚¬" %></p>
    </div>
